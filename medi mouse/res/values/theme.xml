<?xml version="1.0" encoding="utf-8"?>
<resources>
<color name="theme_color">#FFFFFF</color>
<style name="Theme" parent="android:Theme.Black.NoTitleBar">
    <item name="android:windowBackground">@color/theme_color</item>
    <item name="android:colorBackground">@color/theme_color</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">#FFFFFF</item>
    <item name="android:background">#000000</item>
    <item name="android:typeface">sans</item>
    <item name="android:actionBarStyle">@style/MyActionBarStyle</item>
    <item name="android:textViewStyle">@style/text</item> 
    <item name="android:dropDownListViewStyle">@style/event_text_black</item>
   	<item name="android:dropDownSpinnerStyle">@style/event_text_black</item>
   	<item name="android:dropDownSelector">@style/event_text_black</item>
</style>
<style name="MyActionBarStyle" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:displayOptions">showHome</item>
        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>
</style>
<style name="ActionButtonStyle" parent="@android:style/Widget.Holo.ActionButton">
    <item name="android:minWidth">0dip</item>
    <item name="android:paddingLeft">0dip</item>
    <item name="android:paddingRight">0dip</item>                  
</style>

<style name="plain_text"> 
    <item name="android:textSize">18dip</item> 
    <item name="android:textColor">#F2F2F2</item>
</style>
<style name="in_out_menu_item">
    <item name="android:textSize">20dip</item> 
    <item name="android:textColor">#1C1C1C</item>
    <item name="android:editTextColor">#1C1C1C</item>
</style>
<style name="event_text"> 
    <item name="android:textSize">15dip</item> 
    <item name="android:textColor">#F2F2F2</item>
</style>
<style name="event_text_black"> 
    <item name="android:textSize">15dip</item> 
    <item name="android:textColor">#1C1C1C</item>
    <item name="android:editTextColor">#1C1C1C</item>
</style>  
<style name="edit_text"> 
    <item name="android:textSize">15dip</item> 
    <item name="android:textColor">#1C1C1C</item>
    <item name="android:background">#FFFFFF</item>
</style> 

<style name="box">
    
</style>
<style name="main_window">
    <item name="android:background">#000000</item>
</style>
<style name="menu_item">
    <item name="android:textSize">16dip</item> 
    <item name="android:textColor">#F2F2F2</item>
    <item name="android:background">@drawable/button_highlight</item>
    <item name="android:layout_width">fill_parent</item>
	<item name="android:layout_height">wrap_content</item>
	<item name="android:layout_gravity">center</item>
</style>
<style name="menu_item_shape">
    <item name="android:background">@drawable/shape</item>
    <item name="android:layout_width">fill_parent</item>
	<item name="android:layout_height">wrap_content</item>
	<item name="android:layout_gravity">center</item>
	
</style>
<style name="divider">
    <item name="android:layout_width">30dip</item>
	<item name="android:layout_height">1dip</item>
	<item name="android:layout_gravity">center</item>
	<item name="android:background">#F2F2F2</item>
</style>

</resources>