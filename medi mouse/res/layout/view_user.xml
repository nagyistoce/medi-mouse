<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <TableLayout android:id="@+id/TableLayout01"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
 		android:layout_marginLeft="15px"
 		android:layout_marginBottom="15px"
 		android:layout_marginRight="15px"
 		android:layout_marginTop="15px"
 		android:background="@drawable/shape">
	<RelativeLayout
        android:id="@+id/top_view"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/name_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/picture_view" />

        <ImageView
            android:id="@+id/picture_view"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:contentDescription="your face" />

        <TextView
            android:id="@+id/status_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_view"
            android:layout_toRightOf="@+id/picture_view"
            android:text="" />

        <TextView
            android:id="@+id/date_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/status_view"
            android:layout_toRightOf="@+id/picture_view"
            android:text="" />
    </RelativeLayout>
</TableLayout>

<ScrollView 
    android:layout_height="fill_parent" 
    android:layout_width="fill_parent"
    android:layout_marginLeft="15px"
	android:layout_marginBottom="15px"
	android:layout_marginRight="15px"
	android:layout_marginTop="15px">

<LinearLayout android:orientation="vertical" >

<TableLayout 
   	android:id="@+id/options_table_view"
	android:background="@drawable/shape">
 	<LinearLayout
 		android:orientation="vertical" 
		android:id="@+id/options_menu_view"
		android:layout_height="wrap_content"/>
</TableLayout>

<View
	android:layout_width="fill_parent"
	android:layout_height="30px">
</View>
<LinearLayout
    android:id="@+id/refresh_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:orientation="vertical" >

</LinearLayout>

<TableLayout 
   	android:id="@+id/core_table_view"
	android:background="@drawable/shape">
 	<LinearLayout
 		android:orientation="vertical" 
		android:id="@+id/core_view"
		android:layout_height="wrap_content"/>
	
</TableLayout>


</LinearLayout>
</ScrollView>

<LinearLayout android:layout_weight="1" 
	android:layout_height="fill_parent" 
    android:layout_width="fill_parent">
    

</LinearLayout>
</LinearLayout>
